{
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": [
    "svelte3"
  ],
  "overrides": [
    {
      "files": ["**/*.svelte"],
      "processor": "svelte3/svelte3"
    },
    {
      "files": ["src/e2e/**/*.js"],
      "env": {
        "mocha": true
      }
    }
  ],
  "rules": {
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],

    // so that svelte export const to be worked
    "import/no-mutable-exports": "off",
    "import/prefer-default-export": "off",
    "import/first": "off" // it's corrupts the file
  }
}